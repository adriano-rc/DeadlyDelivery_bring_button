-- Tenta carregar o script remoto do GitHub de forma segura
local sucesso, scriptRetorno = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/<adriano-rc>/<DeadlyDelivery_bring_button>/main/trazer_button.lua"))()
end)

if not sucesso then
    warn("Erro ao carregar DeadlyDelivery_bring_button:", scriptRetorno)
end

-- Cria a interface básica
local gui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")

gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

frame.Size = UDim2.new(0, 300, 0, 360)
frame.Position = UDim2.new(0.5, -150, 0.5, -180)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.Parent = gui

-- Função auxiliar para criar botões
local function MakeButton(name, positionY)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 250, 0, 50)
    btn.Position = UDim2.new(0.5, -125, 0, positionY)
    btn.Text = name
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
    btn.Parent = frame
    return btn
end

-- BOTÃO: TRAZER ITENS
local btnTrazer = MakeButton("TRAZER", 10)
btnTrazer.MouseButton1Click:Connect(function()
    if type(BringItems) == "function" then
        BringItems()
    else
        warn("BringItems() não encontrada")
    end
end)

